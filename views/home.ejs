<!DOCTYPE html>
<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage</title>
</head>

<body>

    <div>
        <%- include('./partials/nav') %>
            <div class="row row-cols-1 row-cols-md-4 g-4">
                <% blogs.forEach(blog=> { %>
                    <div class="col">
                        <div class="card h-100" style="width: 16rem; margin: 10px;">
                            <img src="<%= blog.coverImageURL %>" class="card-img-top">
                            <div class="card-body d-flex flex-column justify-content-between h-100">
                                <h5 class="card-title text-truncate" title="<%= blog.title %>">
                                    <%= blog.title %>
                                </h5>
                                <a href="<%= `/blog/${blog._id}` %>" class="btn btn-primary mt-auto w-100">View</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
        crossorigin="anonymous"></script>
</body>

</html>